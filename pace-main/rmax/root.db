%Dir stresstest_ref {
  int              enabled     = 0      :enable;
  double           dt          = 0.01   :freq to send trajUpdate Comand;
  double           lastTime    = 0      :wall time when last sent;
  long             numsent     = 0      :number sent;
  double           hangDt      = 1.0    :time between hang;
  double           hangDur     = -1.0   :hang duration (<0 is off);
} stresstest;


%Dir idle_ref {
  int    simsleep    = 1      :(ms) amount to sleep in sim loop;
  double simrate     = 0      :(Hz) sim loop rate;
  int    sleep       = 1      :(ms);    
  double time        = 0.00   :idleTick time;
  double dt          = 0      :idle dt;
  double lastUpdate  = 0      :idle last update;
  double rate        = 0      :(Hz) idle rate;
} idle;


%Dir rootutil_ref {
  dir logger_ref          logger   = logger         :Logging of events;
  dir idle_ref            idle     = idle           :scheduler;
  int size_char      = sizeof(char)   :sizeof(char);
  int size_short     = sizeof(short)  :sizeof(short);
  int size_int       = sizeof(int)    :sizeof(int);
  int size_long      = sizeof(long)   :sizeof(long);
  int size_float     = sizeof(float)  :sizeof(float);
  int size_double    = sizeof(double) :sizeof(double);
  int size_voidptr   = sizeof(void*)  :sizeof(void*);
} rootutil;


%Dir root_ref {
  dir esim_ref            esim     = esim           :e-simulation;
  dir scenes_ref          scenes   = scenes         :scene rendering data;
  dir vehicle_ref         vehicle  = vehicle        :vehicle models;
  dir si_ref              si       = si             :simulation interfaces;
  dir onboard_ref         onboard  = onboard        :onboard software;
  dir gcs_ref             gcs      = gcs            :control station;
  dir rootutil_ref        util     = rootutil       :misc utilities;
  string version  = "\0                                                                                       " :version of build;
} root;




