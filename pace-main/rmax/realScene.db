%define BUILDING_WHITE 0
%define BUILDING_RED 1
%define BUILDING_GREEN 2
%define BUILDING_BLUE 3
%define BUILDING_YELLOW 4
%define BUILDING_PURPLE 5
%define BUILDING_CYAN 6
%define BUILDING_BROWN 7
%define BUILDING_PINK 8
%define REALSCENE_MAX_OBJECTS 20

%Dir building_ref {
  double length    = 10.0*3.28      :Length of bldg (ft);
  double width     = 20.0*3.28      :Width of bldg (ft);
  double height    = 3.0*3.28       :Height of bldg (ft);
  double latitude  = 32.37053333    :latitude;
  double longitude = -84.805083333  :longitude;
  double angle     = 0              :angle (deg);
  char color = BUILDING_BLUE : Bldg color;
  char enable[4] = {1,1,1,1} : ;
} building[20];

%Dir pole_ref {
  double height    = 66.0      :Height of pole (ft);
  double latitude  = 32.3707   :latitude;
  double longitude = -84.8046  :longitude;
} pole[20];

%Dir tree_ref {
  double size      = 50.0      :Height of tree (ft);
  double latitude  = 32.3707   :latitude;
  double longitude = -84.8046  :longitude;
} tree[30];

%Dir realScene_ref {
  dir rsSettings_ref set      = rsSettings   :settings;
  dir rsWork_ref     work     = rsWork       :working directory;
  dir building_ref   bldg[20] = building[20] :Building data;
  dir pole_ref       pole[20] = pole[20]     :Pole data;
  dir tree_ref       tree[30] = tree[30]     :Tree data;
} realScene;

%Dir rsSettings_ref {
  double offset[2] = {-12,-30} :(ft NE) offset realscene database;
  int numBuildings = 0 :number of buildings;
  int numPoles     = 0 :number of poles;
  int numTrees     = 0 :number of trees;
  double datumLat = 32.37053333   :datum latitude (just for graphics display list);
  double datumLon = -84.805083333 :datum longitude;
} rsSettings;

%Dir rsWork_ref {
  int init = 1 :initialize flag;
} rsWork;



